;; 言語を日本語にする
(set-language-environment 'Japanese)

;; 極力UTF-8とする
(prefer-coding-system 'utf-8)

;; fly-check
(add-hook 'after-init-hook #'global-flycheck-mode)

;; auto-complete
(require 'auto-complete-config)
(ac-config-default)

;; yasnippet設定

; 自分用・追加用・デフォルト
(require 'yasnippet)
(setq yas-snippet-dirs
      '("~/.emacs.d/mysnippets"
        "~/.emacs.d/snippets"
	yas-installed-snippets-dir
        ))

(yas-global-mode 1)

